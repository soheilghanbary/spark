    "@types/bun": "latest",
    "concurrently": "^8.2.2",
    "prisma": "^5.14.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.1",
    "@prisma/client": "^5.14.0",
    "dotenv": "^16.4.5",
    "hono": "^4.4.0",
    "zod": "^3.23.8"
  }
}